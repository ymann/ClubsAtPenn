<div class="container">
    <h1>All organizations</h1>
    <div class="row">
        <div class="col-md-4">

            <div class="container" "left-filter">
            <div class="card">
                <div class="card-block">
                    <a href="#"><h4 class="card-title">Filters</h4></a>

                </div>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card">
            <div class="card-block">
                {{# each clubs }}
                    <a href="#"><h4 class="card-title">{{ name }}</h4></a>
                    <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                    <p class="card-text">{{ description }}</p>
                    <a href="#" class="card-link">{{ url }}</a>
                {{/each}}
            </div>
        </div>
    </div>
</div>
</div>